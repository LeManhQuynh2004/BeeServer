    <script>
        let toggle = document.querySelector(".toggle");
        let navigation = document.querySelector(".navigation");
        let main = document.querySelector(".main");

        toggle.onclick = function () {
            navigation.classList.toggle("active");
            main.classList.toggle("active");
        };
        let btn_add = document.querySelector('#btn_add')
        const url = "http://localhost:3000/users/data";
        let body = document.querySelector('#app');
        let content = document.querySelector('.content');
        //POST
        btn_add.addEventListener('click', () => {
            content.innerHTML = `
                        <form action="/users/uploadfile" enctype="multipart/form-data" method="POST">

                        <div class="field">
                            <label class="label">User Name</label>
                                <div class="control">
                                    <input class="input is-rounded" name = "username" type="text" placeholder="Rounded input" required />
                                </div>
                        </div>

                        <div class="field">
                            <label class="label">Password</label>
                                <div class="control">
                                    <input class="input is-rounded" name = "password" type="password" placeholder="Rounded input" required />
                                </div>
                        </div>

                        <div class="field">
                            <label class="label">Email :</label>
                                <div class="control">
                                    <input class="input is-rounded" name = "email" type="text" placeholder="Rounded input" required />
                                </div>
                        </div>

                        <div class="field">
                                    <label class="label">Hình ảnh sản phẩm :</label>
                                    <div class="control">
                                        <input class="input is-rounded" type="file" name="avatar" placeholder="Rounded input" />
                                    </div>
                                    </div>

                        <div class="field">
                            <label class="label">Role :</label>
                                <div class="control">
                                    <input class="input is-rounded" name = "role" type="text" placeholder="Rounded input" required />
                            </div>
                        </div>

                        <div style = "text-align : center;"><button class = "button is-primary" type="submit" id='btn_submit'>Thêm</button></div>
                        </form>
                `;
        });
        const handleCallData = () => {
            fetch(url)
                .then(res => res.json())
                .then(renderData)
                .catch(err => console.log(err));
        };

        const renderData = (data) => {
            let htmls = data.map((item, index) => {
                return `
                <tr>
                <td>${index + 1}</td>
                <td style="max-width: 100px; overflow: hidden; text-overflow: ellipsis;white-space: nowrap;"><span>${item.email}</span></td>
                <td><span class="password-field">${'*'.repeat(item.password.length)}</span></td>
                <td>${item.username}</td>
                <td>${item.role === 0 ? "Quản trị" : "Người dùng"}</td>
                <td style = "max-width: 150px;
                                    overflow: hidden;
                                    text-align : center;
                                    text-overflow: ellipsis;
                                    white-space: wrap;">
                    <button class="btn btn-danger btn_delete" data-id="${item._id}">Xóa</button>
                    <button class="btn btn-primary btn_update" data-id="${item._id}">Sửa</button>
                </td>
                </tr>
        `});
            body.innerHTML = htmls.join('');
            let btn_delete = document.querySelectorAll('.btn-danger')
            for (const btn of btn_delete) {
                btn.addEventListener('click', () => {
                    let id = btn.dataset.id;
                    console.log(id)
                    return confirm('Bạn có chắc chắn muốn xóa sản phẩm này không ?') ? handleDeleteData(id) : ""
                });
            }
        };
        const handleDeleteData = (id) => {
            fetch(`${url}/${id}`, {
                method: 'DELETE'
            }).then(res => res.json()).then(() => {
                alert('Xóa thành công');
                window.location.reload()
            }).catch(err => console.log(err))
        }

        handleCallData();
    </script>
